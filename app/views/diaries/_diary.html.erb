<div class="card">
  <div class="card-header">
    <h4><%= diary.title %></h4>
    <% diary.tags.each do |tag| %>
    <span class="badge badge-primary"><%= tag.name %></span>
    <% end %>
  </div>
  <div class="card-body">
    <p class="card-text"><%= simple_format(diary.body) %></p>
    <p class="text-right font-weight-bold mr-10"><%= diary.name %></p>
  </div>
</div>