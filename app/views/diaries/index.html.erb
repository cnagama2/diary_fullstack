<div class="d-flex align-items-center">
 <h1>日記一覧</h1> 
 <div class="ml-auto diaries__linkBox">
   <%= form_tag diaries_path, method: :get, class: 'diaries__searchForm' do %>
   <%= select_tag :tag_id,
                   options_from_collection_for_select(Tag.all, :id, :name, params[:tag_id]),
                   {
                     prompt: 'タグで絞り込み',
                     class: 'form-control diaries__select',
                     onchange: 'submit(this.form);'
                    }
    %>
    <% end %>
   <%= link_to '新規作成', new_diary_path, class: 'btn btn-outline-dark' %>
   </div>
</div>
<table class="table table-hover diaries__table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">タイトル</th>
      <th scope="col">本文</th>
      <th scope="col">作成日時</th>
      <th scope="col">更新日時</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @diaries.each do |diary| %>
    <tr>
      <th scope="row"><%= diary.id %></th>
      <td><%= diary.title %></td>
      <td><%= diary.body %></td>
      <td><%= diary.created_at.to_s(:datetime_jp) %></td>
      <td><%= diary.updated_at.to_s(:satetime_jp) %></td>
      <td><%= link_to '詳細', diary, class: 'btn btn-outline-dark' %></td>
      <td><%= link_to '削除', diary, class: 'btn btn-outline-dark', method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @diaries %>

